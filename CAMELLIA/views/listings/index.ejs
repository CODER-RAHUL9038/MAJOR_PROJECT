<% layout("/layouts/boilerplate") -%>
<%= success %>
<h3 class="my-3 listing-title">All Listings</h3>
<div
  class="row justify-content-center row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1"
>
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card listing-card col">
      <img
        src="<%= listing.image %>"
        class="card-img-top"
        alt="listing-image"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
        </p>
      </div>
    </div>
  </a>

  <% } %>
</div>
