<% layout("/layouts/boilerplate") -%>

<div class="row justify-content-center">
  <div class="col-10 col-md-8 mt-4">
    <h3><b><%= listing.title %></b></h3>
    <div class="listing-card col-md-8 mt-4">
      <img
        src="<%= listing.image  %> "
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body mt-3">
        <p class="card-text">
          <%= listing.description %> <br />
          <%= listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.location %> <br />
          <%= listing.country %>
        </p>
      </div>
    </div>

    <div class="show-btns d-flex gap-5 mb-4">
      <form action="/listings/<%= listing._id %>/edit">
        <button class="btn btn-danger">Edit</button>
      </form>

      <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
  </div>

  <!-- Review  -->
  <div class="col-10 col-md-8 mt-4">
    <hr />
    <h4>Leave a Review</h4>
    <form
      class="mb-3 needs-validation"
      novalidate
      method="post"
      action="/listings/<%= listing._id %>/reviews"
    >
      <div class="my-3 row">
        <label class="form-label" for="rating">Rating</label>
        <div class="col-7">
          <input
            type="range"
            class="form-range"
            name="review[rating]"
            id="rating"
            min="1"
            max="5"
          />
        </div>
      </div>
      <div class="my-3">
        <label class="form-label" for="comment">Comment</label>
        <textarea
          required
          class="form-control"
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
        ></textarea>
        <!-- <div class="valid-feedback">looks good!</div> -->
        <div class="invalid-feedback">Please comment!</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <p><b>All Reviews</b></p>

    <div class="row ">
      <% for( let review of listing.reviews ) { %>
      <div class="col-md-5 mb-3">
        <div class="card h-100 p-2" >
          <div class="card-body">
            <h5 class="card-title">Username</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %> star</p>  
          </div>
          <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class="btn btn-sm btn-dark my-2">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
