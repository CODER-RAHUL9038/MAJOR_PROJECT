<% layout("/layouts/boilerplate") -%>

<div class="row justify-content-center">
  <div class="col-10 col-md-8 mt-4">
    <h3><b><%= listing.title %></b></h3>
    <div class="listing-card col-md-8 mt-4">
      <img
        src="<%= listing.image.url + '?w=600&auto=format&fit=crop&q=60' %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body mt-3">
        <p class="card-text mb-2">
          <i>
            <i class="fa-solid fa-user-tie"></i> <%= listing.owner.username
            %></i
          >
          <br />
        </p>
        <p class="card-text mb-2">
          <i class="fa-solid fa-circle-info">&nbsp;&nbsp; </i><%=
          listing.description %> <br />
        </p>
        <p class="card-text mb-2">
          <i class="fa-solid fa-indian-rupee-sign"></i> <%=
          listing.price.toLocaleString("en-IN") %> <br />
        </p>
        <p class="card-text mb-2">
          <i class="fa-solid fa-location-dot" style="color: red"></i
          >&nbsp;&nbsp;<%= listing.location %>, <%= listing.country %> <br />
        </p>

        <p class="card-text mb-2">
          <i class="fa-solid fa-layer-group"></i>&nbsp;&nbsp;<%=
          listing.category %>
        </p>
      </div>
    </div>

    <div class="show-btns d-flex gap-5 mb-4">
      <% if (currUser && currUser._id.equals(listing.owner._id)) { %>

      <form action="/listings/<%= listing._id %>/edit">
        <button class="btn btn-danger">Edit</button>
      </form>

      <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
      </form>
      <% } %>
    </div>
  </div>

  <!-- Review  -->
  <div class="col-10 col-md-8 mt-4">
    <% if (currUser) { %>
    <hr />
    <h4>Leave a Review</h4>
    <form
      class="mb-3 needs-validation"
      novalidate
      method="post"
      action="/listings/<%= listing._id %>/reviews"
    >
      <div class="my-3 row">
        <div class="col-7">
          <fieldset class="starability-grow">
            <legend>Rating</legend>

            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
              checked
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
      </div>
      <div class="my-3">
        <label class="form-label" for="comment">Comment</label>
        <textarea
          required
          class="form-control"
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
        ></textarea>
        <!-- <div class="valid-feedback">looks good!</div> -->
        <div class="invalid-feedback">Please comment!</div>
      </div>
      <button class="btn btn-dark">Submit</button>
    </form>
    <% } %> <% if (listing.reviews && listing.reviews.length > 0) { %>
    <hr />
    <p><b>All Reviews</b></p>
    <% } %>

    <div class="row">
      <% for( let review of listing.reviews ) { %>
      <div class="col-md-5 mb-3">
        <div class="card review-card h-100 p-2">
          <div class="card-body">
            <h5 class="card-title">@<i><%= review.author.username %></i></h5>
            <p
              class="starability-result card-text my-2"
              data-rating="<%= review.rating %>"
            ></p>
            <p class="card-text mb-2"><%= review.comment %></p>
          </div>

          <% if (review.author._id.equals(currUser && currUser._id)) { %>
          <form
            method="post"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-sm btn-dark my-2">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
    <h2>Where you’ll be</h2>
    <div
      id="map"
      class="my-4"
      style="height: 400px; width: 100%; border-radius: 12px"
    ></div>
  </div>
</div>

